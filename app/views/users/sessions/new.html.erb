<div class="headline">
  <h2>マイページ登録がお済みの方</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="Log-in">
    <div class="field">
      <h1>メールアドレス</h1>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <h1>パスワード</h1>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field-rem">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "submit-login" %>
    </div>
  </div>

<% end %>

<div class="headline">
  <h2>初めてマイページに登録する方</h2>
</div>

<div class="Render">
  <%= render "users/shared/links" %>
</div>